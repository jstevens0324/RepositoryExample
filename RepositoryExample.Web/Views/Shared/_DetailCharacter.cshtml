                break;

            case RepositoryExample.Entity.CharacterClass.Warrior:
                image = Url.Content("~/public/images/worgenwarrior.jpg");
                description = "Worgen Warrior";
                break;
        }
    }
    
}

<img src="@image" alt="@description" class="img-rounded" />